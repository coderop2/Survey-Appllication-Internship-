<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aiims.survey.techmahindra.myapplication.Activities.SplashActivity">

    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="Splash Screen Image"
        android:scaleType="fitXY"
        android:src="@drawable/ic_splash" />

    <ProgressBar
        android:id="@+id/splashProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/progressBarMarginBottom"
        android:clickable="true"
        android:elevation="@dimen/progressBarElevation"
        android:foreground="?android:attr/selectableItemBackground"
        android:theme="@style/SplashScreenProgressBar"
        android:visibility="gone" />

</RelativeLayout>
