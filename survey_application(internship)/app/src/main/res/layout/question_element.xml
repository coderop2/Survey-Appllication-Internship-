<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/qeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qeCardViewMargin"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="@dimen/qeCardViewElevation">

        <LinearLayout
            android:id="@+id/qeInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/qeQtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/qeQTextPadding"
                android:text="@string/qeQText"
                android:textColor="@color/qeQText"
                android:textSize="@dimen/qeQTextSize" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>